<?xml version="1.0" encoding="utf-8"?>
<!-- Linear Layout for all content -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfessionalActivity"
    android:id="@+id/linear">

    <!-- LinearLayout to display top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- ImageView to display back button -->
        <ImageView
            android:onClick="back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_back"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            />
        <!-- ImageView to display industry button -->
        <ImageView
            android:onClick="industry"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_in"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            />
        <!-- ImageView to display logo button -->
        <ImageView
            android:onClick="home"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/pf"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            />
        <!-- ImageView to display logout button -->
        <ImageView
            android:onClick="logout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_logout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>
    <!-- display a horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <!--TextView to display Professional Name -->
    <TextView
        android:id="@+id/professionalname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- display a horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <!-- Linear Layout display more Professional information -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- TextView to displat rating -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="30dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Rating: "
            android:textColor="@color/blue" />
        <!-- ImageViews to display stars -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp" />
        <ImageView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <!-- TextView to display number of reviews -->
    <TextView
        android:id="@+id/reviewcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- display a horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <!-- TextView to display professional email -->
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- TextView to display professional age -->
    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- TextView to display professional city -->
    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- TextView to display professional province -->
    <TextView
        android:id="@+id/province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_marginBottom="20dp" />
    <!-- display a horizontal line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <!-- Button to allow user to email professional -->
    <Button
        android:id="@+id/emailButton"
        android:onClick="emailPro"
        android:layout_width="370dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:text="E-mail"
        android:backgroundTint="@color/orange"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_gravity="center"/>
</LinearLayout>